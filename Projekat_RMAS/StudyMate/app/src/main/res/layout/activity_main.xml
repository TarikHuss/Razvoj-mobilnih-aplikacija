<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".MainActivity">

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_circle"
        android:translationX="-50dp"
        android:translationY="-50dp" />

    <ImageView
        android:id="@+id/illustration"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="78dp"
        android:contentDescription="Illustration"
        android:src="@drawable/illustration1" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustration"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="88dp"
        android:text="Welcome to StudyMate!"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Your best partner in organization and learning.\nGet started by registering and begin your journey towards better results."
        android:textColor="#555"
        android:textSize="16sp" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="199dp"
        android:layout_height="56dp"
        android:layout_below="@id/description_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#30C4C4"
        android:text="Get Started"
        android:textColor="#FFF"
        android:textStyle="bold" />
</RelativeLayout>
